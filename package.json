{
    "name": "FalconBot",
    "version": "1.1.0",
    "description": "Falcon Discord Bot Using AtlantaBot as OpenSource Discord Bot On github as Base",
    "main": "falcon.js",
    "scripts": {
        "start": "node .",
        "lint": "eslint . --ext .js",
        "testcfg": "node scripts/verify-config.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mfaisalghozi/FalconBot.git"
    },
    "author": "MfaisalGhozi",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/mfaisalghozi/FalconBot/issues"
    },
    "homepage": "https://github.com/mfaisalghozi/FalconBot#readme",
    "dependencies": {
        "@discordjs/opus": "^0.3.2",
        "@k3rn31p4nic/google-translate-api": "github:k3rn31p4nic/google-translate-api",
        "@sentry/node": "5.29.0",
        "amethyste-api": "github:mfaisalghozi/amethyste-api",
        "ascii-table": "0.0.9",
        "blague.xyz": "^2.0.4",
        "btoa": "^1.2.1",
        "canvas": "^2.6.1",
        "chalk": "^4.1.0",
        "colors-generator": "^0.3.4",
        "cron": "^1.7.2",
        "dblapi.js": "^2.3.0",
        "discord-backup": "^2.1.19",
        "discord-canvas": "^1.3.2",
        "discord-giveaways": "^4.2.1",
        "discord-paginationembed": "^2.1.0",
        "discord-player": "^3.0.3",
        "discord.js": "^12.2.0",
        "ejs": "^3.1.3",
        "express": "^4.17.1",
        "express-session": "^1.17.0",
        "figlet": "^1.5.0",
        "fortnite": "^4.3.2",
        "gamedig": "^2.0.21",
        "i18next": "^19.6.2",
        "i18next-node-fs-backend": "^2.1.3",
        "markdown-table": "^1.1.3",
        "mathjs": "^8.1.0",
        "md5": "^2.2.1",
        "moment": "^2.26.0",
        "mongoose": "^5.9.25",
        "request": "^2.88.2",
        "request-promise-native": "^1.0.9"
    },
    "devDependencies": {
        "eslint": "^7.5.0"
    },
    "eslintConfig": {
        "env": {
            "commonjs": true,
            "es6": true,
            "node": true
        },
        "extends": "eslint:recommended",
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "rules": {
            "prefer-const": [
                "error"
            ],
            "indent": [
                "error",
                "tab",
                {
                    "SwitchCase": 1
                }
            ],
            "quotes": [
                "error",
                "double"
            ],
            "semi": [
                "error",
                "always"
            ],
            "linebreak-style": 0,
            "require-atomic-updates": 0
        }
    },
    "eslintIgnore": [
        "dashboard/public"
    ]
}
